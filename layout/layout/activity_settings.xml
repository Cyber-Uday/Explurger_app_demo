<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search in Settings"
        android:gravity="center"
        android:textColorHint="@color/purple"
        android:textSize="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   WIFI"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_wifi_lock_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Bluetooth"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_bluetooth_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Personal Infromation"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Password's"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_perm_device_information_24"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   History"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_history_24"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:backgroundTint="#02FFFFFF"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/settings"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"/>


</LinearLayout>